<% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show pt-2 pb-2 text-center">
        
        <% @user.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <% end %>
        
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>

<div class="container mt-5">
    <div class="row justify-content-between align-content-center pt-5 mt-5 ">
        <div class= "col-lg-4 col-md-5 pt-5">
            <%= image_tag "logo.png", height: 300 %>
        </div>
        <div class= "col-lg-5 col-md-5">
            <div class="card shadow p-3 mb-5 bg-white rounded border-0" >
                <div class="card-body">
                    <%= form_with(model: @user, local: true) do |form| %>
                        <div class="form-group">
                            <%= form.label :name %>
                            <%= form.text_field :name, class: "form-control", required: true %>
                        </div>
                        
                        <div class="form-group">
                            <%= form.label :email %>
                            <%= form.text_field :email, class: "form-control", required: true %>
                        </div>
                        
                        <div class="form-group">
                            <%= form.label :password %>
                            <%= form.password_field :password, class: "form-control", required: true %>
                        </div>
                        
                        <div class="form-group">
                            <%= form.label :password_confirmation %>
                            <%= form.password_field :password_confirmation, class: "form-control", required: true %>
                        </div>
                        
                        
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-12 text-center">
                                <%= form.submit "Create Account", class:"btn btn-primary font-weight-bold pl-5 pr-5" %>
                            </div>
                        </div>
                        <p style= "border: .5px solid #dadde1"></p>
                        <div class="row justify-content-center">
                            <div class="col-md-12 text-center">
                            <%= link_to 'Sign in', new_session_path, class:"btn btn-success font-weight-bold pl-5 pr-5" %>
            
                            </div>
                        </div>  
                    <% end %>
                </div>
            </div>
        </div>
        
    </div>
</div>
