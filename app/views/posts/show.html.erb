<h3 class="mt-3 text-center mb-3">Post details</h3>
<div class= "container mt-5">
  <div class= "row justify-content-center align-content-center">
    <div class="col-md-7 text-center">
      <div class="card shadow mb-5 pt-3 bg-white border-0 index-card" >
        <% if @post.content != "" %>
        <p class= "text-justify pl-4"><%= @post.content %></p> 
        <%end%>
        <div class= "post_image mb-4"> 
            <%= image_tag(@post.image.url) %>
        </div> 
        <div class="card-header pl-4 pb-0">
          <ul class="nav justify-content-center">
            <% if @post.user_id == current_user.id %>
              <li class="nav-item mr-4">
                <%= link_to 'Edit', edit_post_path(@post) %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to 'Back', posts_path %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>