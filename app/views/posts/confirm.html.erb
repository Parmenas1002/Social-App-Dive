<h3 class="mt-3 text-center mb-3">Confirm informations</h1>
<div class= "container mt-5">
    <div class= "row justify-content-center align-content-center">
        <div class="col-md-7 text-center">
            <div class="card shadow mb-5 p-4 bg-white border-0 index-card" >
                <%= form_with(model: @post, local:true) do |form| %>
                    <%= form.hidden_field :image_cache %> 
                    <%= form.hidden_field :content %>
                    <% if @post.content != "" %>
                    <p class= "text-justify"><%= @post.content %></p> 
                    <%end%>
                    <div class= "post_image mb-4"> 
                        <%= image_tag(@post.image.url) if @post.image && @post.image.url %>
                    </div>
                    <%= form.submit "Post", class: "btn btn-success mr-3 text-white font-weight-bold pt-2 pb-2 pl-3 pr-3" %>
                    <%= form.submit "Return to edit", name: 'back', class: "btn btn-danger font-weight-bold pt-2 pb-2 pl-3 pr-3" %>
                <%end%>
            </div>
        </div>
    </div>
</div>



