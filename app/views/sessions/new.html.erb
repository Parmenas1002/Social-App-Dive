<div class="container mt-5">
    <div class="row justify-content-between align-content-center pt-5 mt-5 ">
        <div class= "col-lg-4 col-md-5 pt-5">
            <%= image_tag "logo.png", height: 300 %>
        </div>
        <div class= "col-lg-5 col-md-5">
            <div class="card shadow p-3 mb-5 bg-white rounded border-0" >
                <div class="card-body">
                    <%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
                        <div class="form-group">
                            <%= form.label :email%>
                            <%= form.email_field :email, class: "form-control", required: true  %>
                        </div>
                        <div class="form-group">
                            <%= form.label :password %>
                            <%= form.password_field :password,  class: "form-control", required: true %>
                        </div>
                        <div class="row justify-content-center mb-4">
                            <div class="col-md-12 text-center">
                                <%= form.submit "Login", class:"btn btn-primary font-weight-bold pl-5 pr-5" %>
                            </div>
                        </div>
                        <p style= "border: .5px solid #dadde1"></p>
                        <div class="row justify-content-center">
                            <div class="col-md-12 text-center">
                            <%= link_to 'Sign up', new_user_path, class:"btn btn-success font-weight-bold pl-5 pr-5" %>
                            </div>
                        </div>  
                    <% end %>
                </div>
            </div>
        </div>
        
    </div>
</div>
